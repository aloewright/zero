{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "zero",
  "compatibility_date": "2025-06-27",
  "observability": {
    "enabled": true,
  },
  "assets": {
    "directory": "./build/client/",
    "not_found_handling": "single-page-application",
    "html_handling": "force-trailing-slash",
  },
  "env": {
    "local": {
      "name": "zero-local",
      "vars": {
        "VITE_PUBLIC_BACKEND_URL": "http://localhost:8787",
        "VITE_PUBLIC_APP_URL": "http://localhost:3000",
      },
    },
    "staging": {
      "name": "zero-staging",
      "vars": {
        "VITE_PUBLIC_BACKEND_URL": "https://sapi.alex.chat",
        "VITE_PUBLIC_APP_URL": "https://staging.alex.chat",
      },
    },
    "production": {
      "name": "zero-production",
      "routes": [
        {
          "pattern": "alex.chat",
          "custom_domain": true
        },
        {
          "pattern": "www.alex.chat",
          "custom_domain": true
        }
      ],
      "vars": {
        "VITE_PUBLIC_BACKEND_URL": "https://api.alex.chat",
        "VITE_PUBLIC_APP_URL": "https://alex.chat",
      },
    },
  },
}
